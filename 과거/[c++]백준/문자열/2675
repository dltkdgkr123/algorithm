#include <iostream>
#include <string.h>

using namespace std;
int main() {

	int t = 0;
	int r = 0;
	int c = 0;
	char* p = new char[21];
	cin >> t;
	for (int i = 0; i < t; i++) {
		cin >> r;
		cin >> p;
		for (int i = 0; i < strlen(p); i++) {
			for (int i = 0; i < r; i++)
				cout << p[c];
			c++;
		}
		cout << "\n";
		c = 0;
	}
}
